<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:paddingHorizontal="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/album_1"
                    style="@style/font_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="03/05"
                    android:textColor="@color/mono10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/font_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:text="몸만 큰 내 동생 ㅋㅋㅋㅋㅋ"
                    android:textColor="@color/mono10"
                    app:layout_constraintStart_toEndOf="@id/album_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/album_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/old_pic"
                    app:layout_constraintEnd_toStartOf="@+id/album_1_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/album_1" />

                <ImageView
                    android:id="@+id/album_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/new_pic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/album_1_1"
                    app:layout_constraintTop_toBottomOf="@id/album_1" />

                <TextView
                    android:id="@+id/album_2"
                    style="@style/font_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="03/05"
                    android:textColor="@color/mono10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/album_1_1" />

                <TextView
                    style="@style/font_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="몸만 큰 내 동생 ㅋㅋㅋㅋㅋ"
                    android:textColor="@color/mono10"
                    app:layout_constraintStart_toEndOf="@id/album_2"
                    app:layout_constraintTop_toTopOf="@id/album_2" />

                <ImageView
                    android:id="@+id/album_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/old_pic"
                    app:layout_constraintEnd_toStartOf="@+id/album_2_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/album_2" />

                <ImageView
                    android:id="@+id/album_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/new_pic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/album_2_1"
                    app:layout_constraintTop_toBottomOf="@id/album_2" />

                <TextView
                    android:id="@+id/album_3"
                    style="@style/font_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="03/05"
                    android:textColor="@color/mono10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/album_2_1" />

                <TextView
                    style="@style/font_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="몸만 큰 내 동생 ㅋㅋㅋㅋㅋ"
                    android:textColor="@color/mono10"
                    app:layout_constraintStart_toEndOf="@id/album_3"
                    app:layout_constraintTop_toTopOf="@id/album_3" />

                <ImageView
                    android:id="@+id/album_3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/old_pic"
                    app:layout_constraintEnd_toStartOf="@+id/album_3_2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/album_3" />

                <ImageView
                    android:id="@+id/album_3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/new_pic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/album_3_1"
                    app:layout_constraintTop_toBottomOf="@id/album_3" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

</layout>